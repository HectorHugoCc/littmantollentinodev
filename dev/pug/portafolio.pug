extends templates/template.pug

append config
  -pageTitle = 'Portafolio'
  -currentPage = 'portafolio'

block main
  .portafolio
    each file in portafolios
      if file == 'videos'
        a(href=file+".html")
          img(src="/imgs/"+file+"img.png", alt=file, class="portafolio__img")
      else
        a(href=file+".html")
          img(src="/imgs/"+file+"img.jpg", alt=file, class="portafolio__img")

block footer
  include blocks/footer

block assets
  include blocks/scripts